<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.HomeActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="FULL_BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintTop_toTopOf="@+id/btnAddres"
        ads:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="exibir"
        android:text="@string/addres"
        ads:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPessoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="exibir"
        android:text="@string/pessoa"
        ads:layout_constraintTop_toBottomOf="@+id/btnAddres" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="exibir"
        android:text="@string/user"
        ads:layout_constraintTop_toBottomOf="@+id/btnPessoa" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="exibir"
        android:text="@string/post"
        ads:layout_constraintTop_toBottomOf="@+id/btnUse" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="exibir"
        android:text="@string/comments"
        ads:layout_constraintTop_toBottomOf="@+id/btnPost" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="exibir"
        android:text="@string/people"
        ads:layout_constraintTop_toBottomOf="@+id/btnComments" />

</androidx.constraintlayout.widget.ConstraintLayout>